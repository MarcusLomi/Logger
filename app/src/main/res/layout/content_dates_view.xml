<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_dates_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.marcus.logger.DatesView"
    tools:showIn="@layout/activity_dates_view"
    android:weightSum="1">

    <TextView
        android:text="Total Count: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:id="@+id/totalDatesTextView"
        android:textStyle="normal|bold"
        android:layout_weight="0.36" />

    <TextView
        android:text=" Most Recent:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recentDateTextView" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="431dp"

        android:id="@+id/datesListView"
        android:drawSelectorOnTop="false"
        android:focusable="true" />
</LinearLayout>
